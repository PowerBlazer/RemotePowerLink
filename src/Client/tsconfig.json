{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "strictNullChecks": false,
        "paths": {
            "*": ["./src/*"]
        },
        "lib": ["dom", "es2015", "es2017", "esnext"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
